# ============================================
# Renty Dynamic Pricing - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=Renty Dynamic Pricing
DEBUG=false

# ============================================
# SQL Server Configuration
# ============================================
# Source database connection (eJarDbSTGLite, eJarDbReports)
SQL_SERVER=your-server-name
SQL_DATABASE=eJarDbSTGLite
SQL_DATABASE_REPORTS=eJarDbReports
SQL_DRIVER=ODBC Driver 17 for SQL Server

# For Windows Authentication (recommended for local dev):
SQL_USE_WINDOWS_AUTH=true
SQL_USERNAME=
SQL_PASSWORD=

# For SQL Authentication (for Docker/production):
# SQL_USE_WINDOWS_AUTH=false
# SQL_USERNAME=your-sql-username
# SQL_PASSWORD=your-sql-password

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=change-me-in-production-use-secure-random-key-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=480

# ============================================
# External APIs
# ============================================
# Calendarific API (for holidays)
CALENDARIFIC_API_KEY=your-calendarific-api-key

# Booking.com RapidAPI (for competitor pricing)
BOOKING_COM_API_KEY=your-rapidapi-key

# WeatherAPI.com (for weather data)
WEATHERAPI_COM_KEY=your-weatherapi-key

# Open-Meteo (free, no key required)
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1

# ============================================
# Multi-Tenancy
# ============================================
# MVP tenant configuration
MVP_TENANT_ID=1
MVP_TENANT_NAME=Yelo

# ============================================
# Simulation (for testing/development)
# ============================================
# Set to simulate a specific "today" date (YYYY-MM-DD)
# Leave empty to use actual system date
SIMULATION_TODAY=2025-05-31
